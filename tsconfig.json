{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "outDir": "dist",
        "noEmitOnError": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "src/test.ts"]
}